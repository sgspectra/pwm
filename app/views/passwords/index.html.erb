<div class="page">
  <p id="notice"><%= notice %></p>

  <h1>Passwords</h1>


<table>
  <thead>
    <tr>
      <th>Login</th>
      <th>Password</th>
      <th>Site</th>
      <th>Age(Days)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passwords.each do |password| %>
      <tr>
        <td><%= password.login %></td>
        <td><%= password.password %></td>
        <td><%= password.site %></td>
        <% end_date = Time.now.to_date %>
        <% start_date = password.updated_at.to_date %>
        <% diff = (end_date - start_date).to_i %>
        <% if diff == -1
             diff = 0
        end %>
        <td><%= diff %></td>
        <td><%= link_to 'Show', password %></td>
        <td><%= link_to 'Edit', edit_password_path(password) %></td>
        <td><%= link_to 'Destroy', password, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Password', new_password_path %>
</div>